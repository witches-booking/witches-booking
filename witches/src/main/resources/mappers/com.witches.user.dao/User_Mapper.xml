<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.witches.user.dao.UserDAO">

	<!-- 회원 체크 -->
	<select id="userCheck" parameterType="com.witches.user.vo.UserVO" resultType="com.witches.user.vo.UserVO">
	SELECT COUNT(*)
	FROM USER
	WHERE id = #{loginId}
	AND sns = #{sns}
	</select>
	
	<!-- 회원 조회 -->
	<select id="userSelect" parameterType="com.witches.user.vo.UserVO" resultType="com.witches.user.vo.UserVO">
	SELECT *
	FROM USER
	WHERE id = #{loginId}
	AND sns = #{sns}
	</select>
	
	<!-- 회원 등록 -->
	<insert id="userInsert" parameterType="com.witches.user.vo.UserVO">
		INSERT INTO USER(
		ID
		, SNS
		)VALUES(
		<if test="loginId != null and loginId != ''">
		#{loginId}
		</if>
		<if test="loginId != null and loginId != ''">
		,#{sns}
		</if>
		)
	</insert>
	
</mapper>